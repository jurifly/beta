
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users can read and write their own profile and subcollections
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;

      match /{subcollection}/{docId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // Logged-in users can create and read invites.
    // They can update an invite to accept it.
    match /invites/{inviteId} {
      allow read, create, update: if request.auth != null;
    }

    // Any authenticated user can submit feedback.
    match /feedback/{feedbackId} {
      allow create: if request.auth != null;
    }
    
    // The user counter can be updated by authenticated users during signup.
    match /counters/userCounter {
      allow read, write: if request.auth != null;
    }
    
    // Access passes can be read by any authenticated user to check for validity.
    match /accessPasses/{passId} {
      allow read, update: if request.auth != null;
    }
    
    // Allow users to create transaction documents when they "pay" for a plan.
    match /transactions/{transactionId} {
      allow create: if request.auth != null;
    }
  }
}
