rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // User Profile Rules
    match /users/{userId} {
      // Users can read and write their own profile
      allow read, update: if isOwner(userId);
      // Anyone authenticated can create a user profile (on signup)
      allow create: if request.auth != null;

      // Subcollection Rules
      match /vault/{docId} {
        allow list, get, create, update, delete: if isOwner(userId);
      }

      match /chatHistory/{docId} {
        allow list, get, create, update, delete: if isOwner(userId);
      }
      
      match /notifications/{docId} {
        allow list, get, create, update, delete: if isOwner(userId);
      }
    }

    // Transaction Rules
    match /transactions/{transactionId} {
      // Users can create their own transactions
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      
      // Users can update their own transaction to add the UPI ID.
      // Admins (you) can update status from the Firebase console.
      allow update: if isOwner(resource.data.userId);

      // Only allow reading your own transactions
      allow read: if isOwner(resource.data.userId);
    }
  }
}
