rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Rule for the 'users' collection
    match /users/{userId} {
      // A user can read and write to their own user document
      allow read, update, delete: if request.auth.uid == userId;
      // Anyone can create a user document (on signup)
      allow create: if request.auth.uid != null;
      
      // Rules for subcollections within a user document
      
      // Rule for chat history
      match /chatHistory/{historyId} {
        allow read, write, create: if request.auth.uid == userId;
      }
      
      // Rule for document vault
      match /vault/{itemId} {
         allow read, write, create, delete: if request.auth.uid == userId;
      }
      
      // Rule for notifications
      match /notifications/{notificationId} {
        allow read, write, create, delete: if request.auth.uid == userId;
      }
    }
    
    // Rule for the 'transactions' collection
    match /transactions/{transactionId} {
        // Any authenticated user can create a new transaction document
        allow create: if request.auth != null;
        
        // Only the user who created the transaction can read or update it
        allow read, update: if request.auth.uid == resource.data.userId;
    }
  }
}
